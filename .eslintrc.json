{
    "env": {
        "node": true,
        "jest": true,
        "es6": true
    },
    "rules": {
        "no-console": 0,
        "indent": [2, "tab"],
        "no-tabs": 0,
        "max-len": [2, {
            "code": 120
        }],
        "valid-jsdoc": "off",
        "require-jsdoc": "off",
        "new-cap": 0,
        "no-invalid-this": 0,
        "comma-dangle": ["error", {
            "functions": "ignore",
            "objects": "always-multiline",
            "arrays": "always-multiline"
        }],
        "no-prototype-builtins": "warn",
        "no-useless-catch": "warn",
        "eqeqeq": ["warn", "smart"]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "extends": ["eslint:recommended", "google"]
}